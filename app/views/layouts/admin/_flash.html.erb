<% if notice.present? || alert.present? %>
  <div class="uk-section-xsmall">
    <% if notice.present? %>
      <div class="uk-alert-success" uk-alert>
        <a class="uk-alert-close" uk-close></a>
        <p><%= notice %></p>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="uk-alert-danger" uk-alert>
        <a class="uk-alert-close" uk-close></a>
        <p><%= alert %></p>
      </div>
    <% end %>
  </div>
<% end %>
